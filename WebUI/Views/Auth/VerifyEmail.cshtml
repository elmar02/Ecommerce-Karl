@{
    Layout = "_AuthLayout";
}

@model CheckVerifyDTO

<h3 class="card-title text-left mb-3">Verify Email</h3>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (ViewData["Error"] != null)
    {
        <div class="text-danger">@ViewData["Error"]</div>
    }
    <input type="hidden" asp-for="Id" />
    <div class="form-group d-flex gap-2">
        @for (int i = 0; i < Model.CodeArray.Length; i++)
        {
            <input asp-for="CodeArray[i]" type="text" class="form-control p_input text-center" maxlength="1">
        }
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-block enter-btn">Verify</button>
    </div>
</form>